<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ImageView untuk gambar laptop -->
        <ImageView
            android:id="@+id/img_item_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <!-- Nama laptop -->
        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Laptop"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="16dp" />

        <!-- Deskripsi laptop -->
        <TextView
            android:id="@+id/tv_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Laptop"
            android:textSize="14sp"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/tv_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spesifikasi Laptop"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/tv_spec_processor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="laptop_specs"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/tv_spec_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="laptop_display_sizes"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/tv_spec_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="laptop_battery_capacity"
            android:layout_margin="10dp" />
    </LinearLayout>
</ScrollView>
